<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/me"
                android:id="@+id/user_profile_image_post"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_user_name"
                android:text="User Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/post_image_home"
            android:src="@drawable/me"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/post_image_like_btn"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/heart"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_comment"
                android:id="@+id/post_image_comment_btn"
                android:layout_marginTop="4dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/post_image_like_btn" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:src="@drawable/send_icon"
                android:id="@+id/post_image_share_btn"
                android:layout_marginTop="4dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/post_image_comment_btn" />

            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_save"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/post_save_btn"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_likes"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_publisher"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_description"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_comments"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>